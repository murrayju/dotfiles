[tortoisehg]
ui.language = en
vdiff = beyondcompare3
workbench.custom-toolbar = Vim
workbench.revdetails.custom-menu = Vim
tabwidth = 4
forcerepotab = True
monitorrepo = always
autoresolve = True
issue.regex = ((nfc)|([A-Za-z]+-[0-9]+))
issue.link = https://clientservices2.mmodal.com/browse/{0}
issue.inlinetags = False
issue.linkmandatory = False
issue.bugtraqtrigger = never
shell = cygwin_terminal
guifork = True
fullpath = False
workbench.single = True
tasktabs = east


[extensions]
purge = 
mq = 
rebase = 
progress =
color =
histedit = 
eol=
hgext.bookmarks=
shelve=
hgext.extdiff=

[extdiff]
cmd.vimdiff=

[revsetalias]
wip = (parents(not public()) or not public() or . or head()) and (not obsolete() or unstable()^) and not closed()

[templates]
wip = '{label("log.branch", ifeq(branch, "default", "", branch))} {label("changeset.{phase}", rev)} {label("grep.user", author|user)}{label("log.tag", if(tags," {tags}"))} {bookmarks % "{ifeq(bookmark, currentbookmark, label('log.activebookmark', bookmark), label('log.bookmark', bookmark))} "}{label('log.date', date|age)}\n{label(ifcontains(rev, revset('parents()'), 'desc.here'),desc|firstline)}'

[color]
mode=terminfo

#Custom colours
color.orange=202
color.lightyellow=191
color.darkorange=220
color.brightyellow=226

#Colours for each label
log.branch=cyan 
log.summary=lightyellow
log.description=lightyellow
log.bookmark=green
log.tag=darkorange
log.activebookmark = green bold underline
log.date=red

changeset.public=orange bold
changeset.secret=blue bold
changeset.draft=brightyellow bold

desc.here=bold blue_background

[alias]
wip = log --graph --rev=wip --template=wip
l = log -G -l15 --template=wip
vi = vimdiff
vim = vimdiff

[tortoisehg-tools]
Vim.enable = istrue
Vim.label = Vim
Vim.showoutput = False
Vim.tooltip = Vim


[patch]
eol = auto
